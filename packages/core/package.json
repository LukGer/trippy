{
  "name": "@trippy/core",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "seed": "sst shell --stage=dev -- bun src/seeder/index.ts",
    "db:studio": "sst shell --stage=dev -- drizzle-kit studio",
    "db:push": "sst shell --stage dev drizzle-kit push",
    "db:generate": "sst shell --stage dev drizzle-kit generate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.4",
    "drizzle-orm": "^0.33.0",
    "ulid": "2.3.0",
    "valibot": "0.30.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "drizzle-kit": "^0.24.0"
  }
}
